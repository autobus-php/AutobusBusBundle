{% if delete_form is defined %}
    {{ form(delete_form, {'attr': {'id': 'delete-form'}}) }}
{% endif %}

<div class="modal fade" id="delete-element-modal" tabindex="-1" aria-labelledby="delete-element-modal-label"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-element-modal-label">{{ 'Delete this element?'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ 'Are you sure you want to delete this item?'|trans }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    {{ 'No'|trans }}
                </button>
                <button type="button" class="btn btn-danger" id="delete-element-button-modal">
                    {{ 'Yes'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.btn-delete-modal').on('click', function (e) {
            e.preventDefault();
            $('#delete-element-modal').modal('show');
        });

        $('#delete-element-button-modal').on('click', function (e) {
            e.preventDefault();
            $('#delete-form').submit();
        });
    });
</script>